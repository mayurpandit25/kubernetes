pipeline {
    agent any

    stages {
        stage('checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/mayurpandit25/kubernetes.git'
            }
        }
        
        stage('build') {
    steps {
        script {
            catchError(buildResult: 'UNSTABLE') {
                sh 'kubectl apply -f .'
            }
        }
    }
}
